{
  "name": "typescript-mocha-sinon-nyc",
  "version": "1.0.0",
  "description": "Boilerplate project for TypeScript library tested with Mocha",
  "author": "Ole B. Michelsen",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/omichelsen/typescript-mocha-sinon-nyc.git"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .js,.ts",
    "pretest": "yarn lint",
    "test": "nyc --check-coverage --lines 100 mocha --reporter progress",
    "test:watch": "mocha -w --reporter min"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.2.17",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.0.2",
    "@types/proxyquire": "^1.3.27",
    "@types/sinon": "^10.0.0",
    "@types/sinon-chai": "^3.2.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint-config-omichelsen": "^1.4.0",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.1",
    "sinon": "^10.0.0",
    "sinon-chai": "^3.3.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "prettier": "eslint-config-omichelsen/.prettierrc"
}
