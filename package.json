{
  "name": "typescript-mocha-sinon-nyc",
  "version": "1.0.0",
  "description": "Boilerplate project for TypeScript library tested with Mocha",
  "author": "Ole B. Michelsen",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/omichelsen/typescript-mocha-sinon-nyc.git"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "tslint {src,test}/**/*.ts --format stylish",
    "test": "nyc --check-coverage --lines 100 mocha --reporter progress",
    "test:watch": "mocha -w --reporter min"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.7.1",
    "@types/proxyquire": "^1.3.27",
    "@types/sinon": "^5.0.1",
    "@types/sinon-chai": "^3.2.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "proxyquire": "^2.1.0",
    "sinon": "^6.1.5",
    "sinon-chai": "^3.2.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.0.0",
    "typescript": "^3.0.1"
  }
}
